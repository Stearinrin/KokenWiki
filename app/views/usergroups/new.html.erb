<div class="row">
    <div class="col-xl-2 col-lg-3 col-sm-4 col-xs-12">
        <div>
            <%=render partial: "settings/left"%>
        </div>
        <div class="d-lg-none">
            <%=render partial: "settings/right"%>
        </div>
   </div>
    <div class="col-xl-8 col-lg-6 col-sm-8 col-xs-12">
        
  <h3>ユーザーグループの作成</h3>
  <div>
    <%=form_with(url: "/setting/usergroups",scope: :usergroup,method: "post") do |form|%>
        <div class="form-group">
        <%=form.label "グループ名"%>
        <%=form.text_field("name",{placeholder: "グループ名(重複不可)", class: "form-control"})%><br/>
      </div>
      <p>グループに入れたいユーザーにチェックしてください</p><br>
      <table class="table">
        <tr><th></th><th>名前</th><th>ユーザーID</th></tr>
        <%@users.each do |user|%>
          <tr>
            <td><%=form.check_box("check_id",{:checked=>false,:multiple=> true},user.id.to_s)%></td>
            <td><%=user.name%></td>
            <td><%=user.user_id%></td>
          </tr>
        <%end%>
      </table>
      <%=form.submit "登録",:class =>"btn btn-primary"%>
    <%end%>
  </div>
    </div>
    <div class="col-xl-2 col-lg-3 d-none d-lg-block">
        <%=render partial: "settings/right"%>
    </div>
</div>